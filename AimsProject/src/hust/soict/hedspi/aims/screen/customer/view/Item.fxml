<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane style="-fx-border-color: black;" xmlns="http://javafx.com/javafx/21"
	xmlns:fx="http://javafx.com/fxml/1">
	<children>
		<VBox alignment="CENTER" prefHeight="175.0" prefWidth="305.0">
			<children>
				<Label fx:id="lblTitle" alignment="CENTER" lineSpacing="20.0"
					prefHeight="50.0" prefWidth="305.0" text="Title" />
				<Label fx:id="lblCost" alignment="CENTER" lineSpacing="20.0"
					prefHeight="50.0" prefWidth="305.0" text="Cost" />
				<HBox prefHeight="100.0" prefWidth="200.0">
					<children>
						<Button fx:id="btnAddToCart" mnemonicParsing="false"
							onAction="#btnAddToCartClicked" prefHeight="50.0"
							prefWidth="305.0" text="Add to Cart" />
						<Button fx:id="btnPlay" mnemonicParsing="false"
							onAction="#btnPlayClicked" prefHeight="50.0"
							prefWidth="305.0" text="Play" />
					</children>
				</HBox>
			</children>
		</VBox>
	</children>
</AnchorPane>
